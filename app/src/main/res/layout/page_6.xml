<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/azuritecard">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:padding="15dp"
        android:src="@drawable/azuritelogo" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="10dp"
        android:textAlignment="center"
        android:layout_weight="4.5"
        android:text="Fierce competitors, fighting even against the heaven, descend into earth to claim what's theirs. Feel the wrath of the demons engulf the arena.
Feel the bonds forged by battles and blood. Witness their brawl with even gods, witness their rise to pinnacle, witness their glory in their journey to the top of Aaveg'20"
        app:autoSizeTextType="uniform"
        app:autoSizeMinTextSize="14sp"
        app:autoSizeMaxTextSize="100sp"
        app:autoSizeStepGranularity="2sp"
        android:fontFamily="@font/exo2_regular"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:text="swipe ->"
        android:textAlignment="viewEnd"
        app:autoSizeTextType="uniform"
        app:autoSizeMinTextSize="10sp"
        app:autoSizeMaxTextSize="100sp"
        app:autoSizeStepGranularity="2sp"
        android:fontFamily="@font/exo2_regular"/>

</LinearLayout>
